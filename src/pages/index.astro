---
import { buttonVariants } from "@/components/ui/button";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="John Clow | Welcome"
  description="Technologist and creative maker in San Francisco."
>
  <section class="container mx-auto grid gap-10 px-4 py-16 md:grid-cols-[2fr_1fr] md:items-center md:py-24">
    <div class="space-y-6">
      <h1 class="text-4xl font-bold leading-tight tracking-tight md:text-6xl">
        Hi, I'm John Clow
      </h1>
      <p class="text-sm font-semibold uppercase tracking-[0.2em] text-muted-foreground">
        Welcome to  my repository of small projects.
      </p>
      <div class="flex flex-wrap gap-3">
        <a href="/about" class={buttonVariants({ size: "lg" })}>
          Get to know me
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
