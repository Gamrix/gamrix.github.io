---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ZoneShiftDemo from "@/components/projects/zoneshift/ZoneShiftDemo";
---

<BaseLayout title="Zoneshift" description="A timezone shift planner focused on daily sleep alignment.">
  <section class="container mx-auto px-4 py-16 md:py-24">
    <div class="mx-auto flex max-w-3xl flex-col gap-6 text-muted-foreground">
      <h1 class="text-3xl font-semibold text-foreground md:text-4xl">Zoneshift Planner</h1>
    </div>

    <div class="mt-12">
      <ZoneShiftDemo client:load />
    </div>
  </section>
</BaseLayout>
